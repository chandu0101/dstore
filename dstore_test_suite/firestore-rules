   rules_version = '2';
   service cloud.firestore {
      match /databases/{database}/documents {
         
             
     
     match /users/{document} {
       allow read: true; 
       allow write: false;
       
       
        
       
       

            
     
     match /messages/{document} {
        
       
       
       
       allow get: true; 
       
       

       
     }
   
     }
   
      }
   }   
  